{% extends 'basebackoffice.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table {
            background-color: white;
        }
        .table thead th {
            text-align: center;
        }
        .action-column {
            width: 100px; /* Adjust the width as needed */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Utilisateurs</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nom d'utilisateur</th>
                        <th>Email</th>
                        <th class="text-center action-column">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in employeUsers %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td class="text-center action-column">
                                <a href="{{ path('app_update_user', {'id': user.id}) }}" class="btn btn-primary btn-sm">
                                    <i class="bi bi-pencil"></i> <!-- Icon for Update -->
                                </a>
                                <a href="{{ path('app_delete_user', {'id': user.id}) }}" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> <!-- Icon for Delete -->
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
