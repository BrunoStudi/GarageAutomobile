{% extends 'base.html.twig' %}

{% block title %}Contact Form{% endblock %}

{% block body %}
    <div class="container mt-5"> <!-- Added container and margin top -->
        <div class="row justify-content-center"> <!-- Center the form horizontally -->
            <div class="col-md-6"> <!-- Limit form width -->
                <h1 class="text-center">Contact Us</h1>

                <form method="post">
                    {{ form_errors(form) }}

                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom') }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.prenom, 'Prénom') }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.email, 'Email') }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.numTel, 'Numéro de téléphone') }}
                        {{ form_widget(form.numTel, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.message, 'Message') }}
                        {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
