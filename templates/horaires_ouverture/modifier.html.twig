{% extends 'basebackoffice.html.twig' %}

{% block title %}Créer Horaires d'Ouverture{% endblock %}

{% block body %}
    <style>
        /* Custom styles for the form container */
        .form-container {
            background-color: #fff; /* White background */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Shadow effect */
            padding: 20px; /* Add some padding */
        }

        /* Custom styles for centering the button */
        .btn-center {
            text-align: center; /* Center align button */
        }

        /* Custom styles for increasing the size of label text */
        .form-label {
            font-size: 18px; /* Increase label font size */
        }

        /* Custom styles for the h1 element */
        .form-title {
            text-align: center; /* Center align the title */
            font-size: 24px; /* Increase font size */
            margin-bottom: 30px; /* Add some bottom margin for spacing */
            color: #333; /* Change text color */
        }

        /* Custom styles to move the form down */
        .form-wrapper {
            margin-top: 50px; /* Add some top margin to move the form down */
        }
    </style>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6 form-wrapper"> <!-- Added custom class for form wrapper -->
                <form method="post" class="form-container">
                    <h1 class="form-title">Mettre à jours Horaires d'ouverture</h1> <!-- Improved h1 display -->
                    <div class="mb-3">
                        {{ form_label(form.Jour, 'Jour :', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.Jour, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.Horaire, 'Horaire ouverture :', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.Horaire, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    {{ form_row(form._token) }}
                    <div class="mb-3 mt-4 btn-center">
                        <button type="submit" class="btn btn-primary">Mettre à jours</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="mt-5">
        {% include 'staticservicelist.html.twig' %}
    </div>
{% endblock %}
