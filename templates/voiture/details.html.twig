{% extends is_granted('IS_AUTHENTICATED_FULLY') ? 'basebackoffice.html.twig' : 'base.html.twig' %}

{% block title %}Détails de la voiture
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<!-- Boutons d'édition et de suppression pour les employés -->
		<!-- Car images carousel -->
			<div class="container mt-5"> <div class="col-md-12 row bg-white shadow rounded-4 border" style="border-radius: 15px">
				<div id="carouselExampleControls" class="carousel slide col-md-6 p-0" data-bs-ride="carousel" style="margin: 0 auto; border-bottom-left-radius: 15px; border-top-left-radius: 15px;">
					<div class="carousel-inner col-md-6">
						{% for image in voiture.images %}
							<div class="carousel-item {% if loop.first %}active{% endif %}">
								<img src="{{ asset('uploads/voiture/' ~ image.name) }}" class="d-block w-100" alt="{{ voiture.Titre }}" style="object-fit: cover; height: 450px; border-bottom-left-radius: 15px; border-top-left-radius: 15px;">
							</div>
						{% endfor %}
					</div>
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
				<section class="col-md-6 my-auto">
					<div class="row">
						<div class="d-flex border col-md-5 m-2 mx-auto" style="border: grey">
							<div class="my-auto col-md-3">
								<div class="align-self-center">
									<i class="fas fa-taxi text-primary fa-3x me-4"></i>
								</div>
							</div>
							<div class="align-self-center">
								<h3 class="h3 mb-0">{{ voiture.Titre }}</h2>
							</div>
						</div>
						<div class="d-flex border col-md-5 m-2 mx-auto" style="border: grey">
							<div class="my-auto col-md-3">
								<div class="align-self-center ps-3">
									<i class="fas fa-euro-sign text-success fa-3x me-4"></i>
								</div>
							</div>
							<div class="align-self-center">
								<h2 class="h3 mb-0">{{ voiture.Prix | number_format(0, '', '.') }}
									€</h2>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="d-flex border col-md-5 mx-auto" style="border: grey">
							<div class="my-auto col-md-3 py-2">
								<div class="align-self-center">
									<i class="fas fa-calendar-alt text-info fa-3x me-4"></i>
								</div>
							</div>
							<div class="align-self-center">
								<h2 class="h3 mb-0">{{ voiture.AnneeCirculation }}</h2>
							</div>
						</div>
						<div class="d-flex border col-md-5 mx-auto" style="border: grey">
							<div class="my-auto col-md-3 py-2">
								<div class="align-self-center">
									<i class="fas fa-road text-warning fa-3x me-4"></i>
								</div>
							</div>
							<div class="align-self-center">
								<h3 class="h3 mb-0 text">{{ voiture.Kilometrage | number_format(0, '', '.') }}
									KM</h2>
							</div>
						</div>

						{% if is_granted('ROLE_EMPLOYE') %}

							<div class="d-flex">
								<div class="mt-4 mx-auto">
									<div class="row">
										<div class="col md-2">
											<a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}" class="btn btn-primary me-3">
												<i class="fas fa-edit fa-lg"></i>
											</a>
										</div>
										<div class="col md-2">
											<a href="{{ path('app_voiture_delete', {'id': voiture.id}) }}" class="btn btn-danger me-3">
												<i class="fas fa-trash fa-lg"></i>
											</a>
										</div>

										<div class="col md-2">
											<a href="{{ path('contacts_details', {'id': voiture.id}) }}" class="btn btn-danger">
												<i class="fas fa-envelope fa-lg"></i>
											</a>
										</div>


									</div>
								</div>

							</div>

						{% endif %}

						{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
							<div class="mt-5">
								<div class="row mt-4 justify-content-center w-100 mt-5">
									<div class=" text-center">
										<a href="{{ path('app_formulaire_contact', {'id': voiture.id}) }}" class="btn btn-primary " style="border-radius: 15px">S'informer</a>
									</div>
								</div>
							</div>
						{% endif %}
					</div>
				</section>
			</div>
		</div>
	</div>
{% endblock %}
