{% extends 'base.html.twig' %}

{% block title %}Voiture index{% endblock %}

{% block body %}
    <h1>Voiture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdVoiture</th>
                <th>Prix</th>
                <th>ImageUrl</th>
                <th>AnneeCirculation</th>
                <th>Kilometrage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.IdVoiture }}</td>
                <td>{{ voiture.Prix }}</td>
                <td>{{ voiture.ImageUrl }}</td>
                <td>{{ voiture.AnneeCirculation ? voiture.AnneeCirculation|date('Y-m-d') : '' }}</td>
                <td>{{ voiture.Kilometrage }}</td>
                <td>
                    <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voiture_new') }}">Create new</a>
{% endblock %}
