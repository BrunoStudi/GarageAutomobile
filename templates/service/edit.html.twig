{% extends 'basebackoffice.html.twig' %}

{% block title %}Modifier Service{% endblock %}

{% block body %}
    <div class="container-xxl service py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="mb-5">Modifier le service</h1>
            </div>
            <div class="row g-4 wow fadeInUp" data-wow-delay="0.3s">
                <div class="col-lg-8 offset-lg-2">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
                        <div class="mb-3">
                            {{ form_label(form.nom, 'Nom du service', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du service'}, 'value': service.nom}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.description, 'Description du service', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Entrez la description du service'}, 'value': service.description}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <button type="submit" class="btn btn-primary">Mettre Ã  jour</button>
                        <a href="{{ path('app_service_index') }}" class="btn btn-primary">Annuler</a>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
