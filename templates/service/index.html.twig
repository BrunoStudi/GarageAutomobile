{% extends is_granted('IS_AUTHENTICATED_FULLY') ? 'basebackoffice.html.twig' : 'base.html.twig' %}

{% block title %}Liste des Services{% endblock %}

{% block body %}
    <!-- Début du Service -->
    <div class="container-xxl service py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="mb-5">Liste des Services</h1>
            </div>
            <div class="row g-4 wow fadeInUp" data-wow-delay="0.3s">
                <div class="col-lg-4">
                    <div class="nav w-100 nav-pills me-4 flex-column">
                        {% for service in services %}
                        <button class="nav-link w-100 d-flex align-items-center text-start p-4 mb-4 {% if loop.first %}active{% endif %}" data-bs-toggle="pill" data-bs-target="#tab-pane-{{ loop.index }}" type="button">
                            <i class="fa fa-car-side fa-2x me-3"></i>
                            <h4 class="m-0">{{ service.nom }}</h4>
                        </button>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="tab-content w-100">
                        {% for service in services %}
                        <div class="tab-pane fade {% if loop.first %}show active{% endif %}" id="tab-pane-{{ loop.index }}">
                            <div class="row g-4">
                                <div class="col-md-12"> <!-- Adjusted column size to fit the entire row -->
                                    <div class="d-flex flex-column justify-content-center h-100">
                                        <p class="mb-4" style="font-size: 18px;">{{ service.description }}</p> <!-- Increased font size to 18px -->
                                        <div>
                                            <p><i class="fa fa-check text-success me-3"></i>Service de qualité</p>
                                            <p><i class="fa fa-check text-success me-3"></i>Travailleurs experts</p>
                                            <p><i class="fa fa-check text-success me-3"></i>Équipement moderne</p>
                                        </div>
                                        {% if is_granted('ROLE_ADMIN') %}
                                        <div class="d-flex gap-3"> <!-- Added a gap between icons -->
                                            <a href="{{ path('app_service_edit', {'id': service.id}) }}" style="font-size: 24px;"><i class="fa fa-pencil-alt"></i></a> <!-- Edit button with pencil icon -->
                                            <a href="{{ path('app_service_delete', {'id': service.id}) }}" style="font-size: 24px;"><i class="fa fa-trash"></i></a> <!-- Delete button with trash icon -->
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Fin du Service -->
{% endblock %}
